<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:scaleType="centerCrop"
            android:src="@drawable/back2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:contentDescription="soups"
                    android:onClick="onKindClick"
                    android:id="@+id/iv1"
                    android:layout_margin="10dp"
                    android:src="@drawable/soups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:contentDescription="hots"
                    android:onClick="onKindClick"
                    android:id="@+id/iv2"
                    android:layout_margin="10dp"
                    android:src="@drawable/hots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:contentDescription="salads"
                    android:onClick="onKindClick"
                    android:id="@+id/iv3"
                    android:layout_margin="10dp"
                    android:src="@drawable/salads"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:contentDescription="breakfasts"
                    android:onClick="onKindClick"
                    android:id="@+id/iv4"
                    android:layout_margin="10dp"
                    android:src="@drawable/breakfasts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:contentDescription="desserts"
                    android:onClick="onKindClick"
                    android:id="@+id/iv5"
                    android:layout_margin="10dp"
                    android:src="@drawable/desserts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:contentDescription="drinks"
                    android:onClick="onKindClick"
                    android:id="@+id/iv6"
                    android:layout_margin="10dp"
                    android:src="@drawable/drinks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </TableRow>

        </LinearLayout>
    </RelativeLayout>


</layout>
